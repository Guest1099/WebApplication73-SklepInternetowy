@model ChangeEmailViewModel

@{
    string email = "";
    if (!string.IsNullOrEmpty (Model.ObecnyEmail))
    {
        email = Model.ObecnyEmail;
    }
}

<div class="headerCe">Zmiana adresu email użytkownikowi @email</div>


<form method="post" asp-action="ChangeEmail" asp-controller="Users" asp-area="Admin">
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <input type="hidden" asp-for="ObecnyEmail" value="@Model.ObecnyEmail" />

    <div class="db">

        <div class="row">
            <div class="fieldName">
                <span>Obecny email</span>
            </div>
            <div class="fieldEdit">
                <input asp-for="ObecnyEmail" disabled />
            </div>
        </div>


        <div class="row">
            <div class="fieldName">
                <span>Nowy email</span>
            </div>
            <div class="fieldEdit">
                <input asp-for="NewEmail" />
                <span asp-validation-for="NewEmail" class="c-red"></span>
                <span class="c-red">@Model.Result</span>
            </div>
        </div>
    </div>


    <div class="bottom-bar-options">
        <a asp-action="Index" asp-controller="Users" class="form-button-a">Anuluj</a>
        <input type="submit" value="Zapisz" class="form-button" />
    </div>

</form>